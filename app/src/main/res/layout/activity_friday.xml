<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tue.thermostat.Friday"
    android:orientation="vertical"
    android:background="@drawable/gradientday"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1F6A7A"
            android:textSize="30dp"
            android:text="Set the Friday program."
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            style="@style/margin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView"
            android:src="@drawable/sun" />

        <ImageView
            style="@style/margin"
            android:src="@drawable/moon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday1fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day1fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night1fri" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight1fri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday2fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day2fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night2fri" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight2fri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday3fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day3fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night3fri" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight3fri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday4fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day4fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night4fri" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight4fri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday5fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day5fri" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night5fri" />

        <Switch
        style="@style/switchPrograms"
        android:id="@+id/switchnight5fri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonsettime"
            android:id="@+id/settimefri" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonback"
            android:id="@+id/backtemp" />

    </LinearLayout>

</LinearLayout>
