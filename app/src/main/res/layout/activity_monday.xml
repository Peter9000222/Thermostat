<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tue.thermostat.Monday"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

    <TextView
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1F6A7A"
        android:textSize="30dp"
        android:text="Set the Monday program."
        android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            style="@style/margin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView"
            android:src="@drawable/sun" />

        <ImageView
            style="@style/margin"
            android:src="@drawable/moon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

    <Switch
        style="@style/switchPrograms"
        android:id="@+id/switchday1mon" />

    <EditText
        style="@style/textedit"
        android:id="@+id/day1mon" />

    <EditText
        style="@style/textedit"
        android:id="@+id/night1mon" />

    <Switch
        style="@style/switchPrograms"
        android:id="@+id/switchnight1mon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday2mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day2mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night2mon" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight2mon" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday3mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day3mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night3mon" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight3mon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday4mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day4mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night4mon" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight4mon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday5mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day5mon" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night5mon" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight5mon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonsettime"
            android:id="@+id/settimemon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonback"
            android:id="@+id/backtemp" />

    </LinearLayout>

</LinearLayout>
