<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tue.thermostat.Saturday"
    android:orientation="vertical"
    android:background="@drawable/gradientday"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1F6A7A"
            android:textSize="30dp"
            android:text="Set the Saturday program."
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            style="@style/margin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView"
            android:src="@drawable/sun" />

        <ImageView
            style="@style/margin"
            android:src="@drawable/moon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday1satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day1satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night1satur" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight1satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday2satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day2satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night2satur" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight2satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday3satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day3satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night3satur" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight3satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday4satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day4satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night4satur" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight4satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchday5satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/day5satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night5satur" />

        <Switch
            style="@style/switchPrograms"
            android:id="@+id/switchnight5satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonsettime"
            android:id="@+id/settimesat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonback"
            android:id="@+id/backtemp" />

    </LinearLayout>

</LinearLayout>
