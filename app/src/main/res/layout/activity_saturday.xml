<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tue.thermostat.Saturday"
    android:orientation="vertical"
    android:background="#000000"
    android:weightSum="11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:text="Set the Saturday program."
            android:id="@+id/textView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            style="@style/margin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/sun" />

        <ImageView
            style="@style/margin"
            android:src="@drawable/moon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            style="@style/textedit"
            android:id="@+id/day1satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night1satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            style="@style/textedit"
            android:id="@+id/day2satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night2satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            style="@style/textedit"
            android:id="@+id/day3satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night3satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            style="@style/textedit"
            android:id="@+id/day4satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night4satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            style="@style/textedit"
            android:id="@+id/day5satur" />

        <EditText
            style="@style/textedit"
            android:id="@+id/night5satur" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="#336699"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:text="Set temperatures"
            android:id="@+id/settemp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <Button
            style="@style/buttonback"
            android:id="@+id/backtemp" />

    </LinearLayout>

</LinearLayout>
