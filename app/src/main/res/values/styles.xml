<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#336699</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="theme">
        <item name="android:background">#336699</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="buttonmenu">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="buttontempplus">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@drawable/tempbuttonplus</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="buttontempminus">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:background">@drawable/tempbuttonminus</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="buttonmenuweek">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="buttonchoosetemp">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">Set temperatures</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="margin">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="buttonback">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">Back</item>
    </style>

    <style name="textedit">
        <item name="android:focusable">false</item>
        <item name="android:inputType">time</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:text">00:00</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="buttonsettime">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/corners</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">Set times</item>
    </style>

    <style name="switchPrograms">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
